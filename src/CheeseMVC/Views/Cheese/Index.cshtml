@model List<CheeseMVC.Models.Cheese>

<h1>@ViewBag.Title</h1>

<table class="table">

    <tr>
        <th>Name</th>
        <th>Description</th>
        <td>Category</td>
    </tr>

    @foreach (var cheese in Model)
    {
        <tr>
            <td>@cheese.Name</td>
            <td>@cheese.Description</td>
            <td>@cheese.Category.Name</td>
        </tr>
    }
</table>

@if (Model.Count == 0)
{
    <p>Where the hell are your cheeses?!</p>
}

    <p>
        <a asp-controller="Cheese" asp-action="Add">Add Cheese</a>
        <a asp-controller="cheese" asp-action="Remove">Remove</a>
    </p>
